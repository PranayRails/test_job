<p id="notice"><%= notice %></p>

<h1>Trains</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Weight Capacity</th>
      <th colspan="3">Volume Capacity</th>
      <th colspan="3">Source</th>
      <th colspan="3">Destination</th>
      <th colspan="3">Cost</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td colspan="3"><%= train.weight_capacity %></td>
        <td colspan="3"><%= train.volume_capacity %></td>
        <td colspan="3"><%= train.source %></td>
        <td colspan="3"><%= train.destination %></td>
        <td colspan="3"><%= train.cost %></td>
        <td colspan="3">
          <%= link_to 'Show', train %>
          <%= link_to 'Edit', edit_train_path(train) %>
          <%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination justify-content-center">
  <%= paginate @trains %>
</div>

<br>

<%= link_to 'New Train', new_train_path %>
