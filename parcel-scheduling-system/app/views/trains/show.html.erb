<div class="row">
  <div class="col-md-10">
    <h2>Trains</h2>
  </div>
  <div class="col-md-2 mt-2">
    <%= link_to 'Edit Parcels', edit_train_path(@train), class: "btn btn-primary" %>
    <%= link_to 'Back', trains_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table">
    <%= render 'train_details', train: @train %>
    <tr>
      <th scope="col">Source</th>
      <td><%= @train.source %></td>
    </tr>
    <tr>
      <th scope="col">Destination</th>
      <td><%= @train.destination %></td>
    </tr>
    <tr>
      <th scope="col">Status</th>
      <td><%= @train.status %></td>
    </tr>
  </table>
</div>
