<% path = @train.new_record? ? trains_path : train_path(@train) %>
<%= form_for(@train, url: path, html: {:class => "form-horizontal center"}, data: { turbo: false }) do |f| %>
  <div class="card container">
    <div class="card-body">
      <div class="form-group mb-3">
        <div class="row">
          <%= f.label "Source", class: 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.select(:source, ['A', 'B', 'C'], {}, {class: 'form-control', autofocus: true}) %>
          </div>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="row">
          <%= f.label "Destination", class: 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.select(:destination, ['A', 'B', 'C'], {}, {class: 'form-control', autofocus: true}) %>
          </div>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="row">
          <%= f.label "Weight Capacity", class: 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.number_field :weight_capacity, class: 'form-control', autofocus: true %>
          </div>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="row">
          <%= f.label "Volume Capacity", class: 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.number_field :volume_capacity, class: 'form-control', autofocus: true %>
          </div>
        </div>
      </div>
      <div class="form-group mb-3">
        <div class="row">
          <%= f.label "Cost", class: 'control-label col-lg-2' %>
          <div class="col-lg-8">
            <%= f.number_field :cost, class: 'form-control', autofocus: true %>
          </div>
        </div>
      </div>
      <%= f.submit 'submit', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
