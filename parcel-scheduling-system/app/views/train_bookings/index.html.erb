<p id="notice"><%= notice %></p>

<h1>Train Bookings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Weight</th>
      <th colspan="3">Volume</th>
      <th colspan="3">Source</th>
      <th colspan="3">Destination</th>
      <th colspan="3">Status</th>
      <th colspan="3">Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @train_bookings.each do |train_booking| %>
      <tr>
        <td><%= train_booking.weight %></td>
        <td><%= train_booking.volume %></td>
        <td><%= train_booking.source %></td>
        <td><%= train_booking.destination %></td>
        <td><%= train_booking.status %></td>
        <td><%= train_booking.cost %></td>
        <tr>
          <td><%= link_to 'Show', train_booking %></td>
          <td><%= link_to 'Edit', edit_train_booking_path(train_booking) %></td>
          <td><%= link_to 'Destroy', train_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tr>
    <% end %>
  </tbody>
  <div class="pagination justify-content-center">
    <%= paginate @train_bookings %>
  </div>
</table>

<br>

<%= link_to 'New Train Booking', new_train_booking_path %>
