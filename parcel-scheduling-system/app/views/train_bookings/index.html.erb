<p id="notice"><%= notice %></p>

<h1>Train Bookings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Id</th>
      <th colspan="3">Departure time</th>
      <th colspan="3">Arrival time</th>
      <th colspan="3">Train</th>
      <th colspan="3">Status</th>
      <th colspan="3">Post master</th>
    </tr>
  </thead>

  <tbody>
    <% @train_bookings.each do |train_booking| %>
      <tr>
        <td><%= link_to train_booking.id, train_booking %></td>
        <td><%= train_booking.departure_time %></td>
        <td><%= train_booking.arrival_time %></td>
        <td><%= link_to train_booking.train.name, train_path(train_booking.train) %></td>
        <td><%= train_booking.status %></td>
        <td><%= link_to train_booking.post_master.name, user_path(train_booking.post_master) %></td>
        <tr>
          <td><%= link_to 'Show', train_booking %></td>
          <td><%= link_to 'Edit', edit_train_booking_path(train_booking) %></td>
          <td><%= link_to 'Destroy', train_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tr>
    <% end %>
  </tbody>
  <div class="pagination justify-content-center">
    <%= paginate @train_bookings %>
  </div>
</table>

<br>

<%= link_to 'New Train Booking', new_train_booking_path %>
